<%= render "banner", page_title: "Save any kind of movie", page_url: "https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1770&q=80" %>

<div class="container">
  <div class="d-flex justify-content-between">
    <h4> My lists (<%= @lists.count %>)</h4>
    <%= link_to 'create a movie list', new_list_path , type:"button", class:"btn btn-success"%>
  </div>

  <ul>
    <% @lists.each do |list| %>
      <li><%= link_to list.name, list_path(list) %></li>
    <% end %>
  </ul>
</div>
